<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/proyectos.css">
    <title>Proyectos</title>
</head>
<body>
	<header>
      <h1>Proyectos</h1>
      <ul>
        <li><a href="/alumnos">Alumnos</a></li>
      </ul>
	</header>

    <br><br><br>

    <div class="proyectos">
        <% if (proyectos.length > 0) { %>
          <ul>
            <% proyectos.forEach(function(proyecto) { %>
              <li class="proyecto">
                <img src="/public/images/proyecto.foto_proyecto %>" alt="Imagen del proyecto">
                <h2><%= proyecto.nombre_proyecto %></h2>
                <p><%= proyecto.descripcion_proyecto %></p>
                <!-- Aquí puedes mostrar otros detalles del proyecto -->
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>No se encontraron proyectos.</p>
        <% } %>
      </div>
      

    <style>
      /* Agrega estilos CSS personalizados para los proyectos aquí */

      .proyectos {
        padding: 20px;
      }

      .proyecto {
        margin-bottom: 20px;
      }

      .proyecto h2 {
        font-size: 18px;
        font-weight: bold;
      }

      .proyecto p {
        margin-top: 5px;
      }
    </style>
</body>
</html>
